pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                sh 'echo "All tests passed!"'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh '''
                    # Create deploy directory
                    mkdir -p /var/www/html
                    # Copy files (assuming Jenkins has permissions)
                    cp -r * /var/www/html/
                '''
                echo 'Deployment complete! Visit your EC2 Public IP to view the site.'
            }
        }
    }
}
